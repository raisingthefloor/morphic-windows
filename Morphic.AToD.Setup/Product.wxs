        <Property Id="WINDOWSBUILDNUMBER" Secure="yes">
            <RegistrySearch Id="BuildNumberSearch" Root="HKLM" Key="SOFTWARE\Microsoft\Windows NT\CurrentVersion" Name="CurrentBuildNumber" Type="raw" />
        </Property>
        <Condition Message="This application is only supported on Windows 10 version 1809 (build 17763) or higher.">
            <![CDATA[(WINDOWSBUILDNUMBER >= 17763)]]>
        </Condition>        
    </Product>

  <Fragment>
        <Directory Id="TARGETDIR" Name="SourceDir">
            <Directory Id="ProgramFiles64Folder">
              <Directory Id="INSTALLFOLDER" Name="Morphic">
                <Directory Id="SERVICEFOLDER" Name="InstallerService"/>
                <Directory Id="SERVICECLIENTFOLDER" Name="InstallerServiceClient"/>
              </Directory>
            </Directory>
        </Directory>
    </Fragment>
</Wix>
