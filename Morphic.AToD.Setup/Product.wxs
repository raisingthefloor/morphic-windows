<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <Product Id="*" Name="AToD" Language="1033" Version="!(bind.FileVersion.fil7436AEE83C08445346530ACB01336CA9)"
             Manufacturer="Raising the Floor" UpgradeCode="6e7cab8b-83e0-4a29-a352-84873b6ed5d2">
        <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine"/>

        <Icon Id="AToDIcon" SourceFile="$(var.Morphic.InstallerService.ProjectDir)\Icon.ico"/>
        <Property Id="ARPPRODUCTICON" Value="AToDIcon"/>

        <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed."/>

        <Media Id="1" Cabinet="AToDSetup.cab" EmbedCab="yes"/>

        <Feature Id="ProductFeature" Title="AToD" Level="1">
            <ComponentGroupRef Id="InstallerServiceGeneratedComponents"/>
            <ComponentGroupRef Id="InstallerServiceClientGeneratedComponents"/>
        </Feature>

        <UIRef Id="WixUI_Minimal" />
