<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Progress" Height="101" Width="385" ResizeMode="NoResize">
    <Grid VerticalAlignment="Center">
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Text="Installing..." />
            <Grid VerticalAlignment="Bottom">
                <ProgressBar Minimum="0" Maximum="100" Value="{Binding Path=ProgressValue}" Height="24" Margin="10" Name="progress" />
                <TextBlock Text="{Binding ElementName=progress, Path=Value, StringFormat={}{0:0}%}" 
               HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
