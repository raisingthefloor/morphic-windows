<Application x:Class="Morphic.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Morphic.Client"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance local:App}"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- simple declaration -->
                <!--<ResourceDictionary Source="StringResources.xaml" />-->
                <!-- -->
                <!-- pack declaration -->
                <!--<ResourceDictionary Source="pack://application:,,,/StringResources.xaml" />-->
                <!-- -->
                <!-- more explicit pack declaration with assembly -->
                <ResourceDictionary Source="pack://application:,,,/Morphic;component/StringResources.xaml" />

                <ResourceDictionary Source="Themes/Light.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
