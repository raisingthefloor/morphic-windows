<StackPanel x:Class="Morphic.Client.Dialogs.CopyStartPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:l10n="clr-namespace:Morphic.Client.Strings"
        mc:Ignorable="d"
        ToolTipService.InitialShowDelay="0"
        >
    <TextBlock HorizontalAlignment="Center"  Margin="20" FontWeight="Bold" Text="{x:Static l10n:Resources.CopySettingsBetweenComputersHeader_Text}"/>
    <TextBlock HorizontalAlignment="Center"  Margin="10,10,10,40" FontSize="15" TextWrapping="Wrap" Text="{x:Static l10n:Resources.CopySettingsBetweenComputersDescription_Text}"/>
    <TextBlock HorizontalAlignment="Center" Margin="20" ><Hyperlink Click="CopyToCloud"><Run Text="{x:Static l10n:Resources.CopySettingsToCloudVaultHyperlink_Text}"/></Hyperlink></TextBlock>
    <TextBlock HorizontalAlignment="Center" Margin="20" ><Hyperlink Click="CopyFromCloud"><Run Text="{x:Static l10n:Resources.CopySettingsFromCloudVaultHyperlink_Text}"/></Hyperlink></TextBlock>
</StackPanel>
