<Application x:Class="Morphic.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Morphic"
             StartupUri="MorphicBar/MorphicBarWindow.xaml"
             Startup="Application_Startup"
             Exit="Application_Exit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- simple declaration -->
                <!--<ResourceDictionary Source="StringResources.xaml" />-->
                <!-- -->
                <!-- pack declaration -->
                <!--<ResourceDictionary Source="pack://application:,,,/StringResources.xaml" />-->
                <!-- -->
                <!-- more explicit pack declaration with assembly -->
                <ResourceDictionary Source="pack://application:,,,/Morphic;component/StringResources.xaml" />

                <ResourceDictionary Source="Themes/Light.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
