<Window
    x:Class="Morphic.SignInWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Morphic"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <!-- Sign-in dialog section -->
        
        <!-- Morphic logo and title -->
        <StackPanel Orientation="Vertical" Margin="0,20, 0, 20">
            <Image Source="/Assets/Images/Square50x50Logo.png" HorizontalAlignment="Center" Width="60"/>
            <TextBlock HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" x:Uid="SignInWindow_MainHeader"/>
        </StackPanel>
        
        <!-- "under construction" block -->
        <StackPanel Orientation="Vertical" Margin="0,20, 0, 20">
            <TextBlock HorizontalAlignment="Center" FontSize="24" FontWeight="ExtraBold">[window is under construction]</TextBlock>
        </StackPanel>

    </StackPanel>
</Window>
